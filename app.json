{
  "expo": {
    "name": "Portfolio Tracker",
    "slug": "portfolio-tracker-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Track your investment portfolio with gold, silver, and currency assets. Modern glassmorphism design with multi-language support.",
    "keywords": [
      "portfolio",
      "investment",
      "gold",
      "silver",
      "currency",
      "finance",
      "tracker"
    ],
    "privacy": "public",
    "githubUrl": "https://github.com/esatakpunar/portfolio-tracker-rn",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.portfoliotracker.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This app does not track users or collect personal data.",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleDisplayName": "Portfolio Tracker",
        "CFBundleShortVersionString": "1.0.0",
        "LSRequiresIPhoneOS": true,
        "UIRequiredDeviceCapabilities": [
          "armv7"
        ],
        "UIStatusBarStyle": "UIStatusBarStyleLightContent",
        "UIViewControllerBasedStatusBarAppearance": false
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "associatedDomains": [],
      "entitlements": {
        "com.apple.developer.applesignin": []
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.portfoliotracker.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": []
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}